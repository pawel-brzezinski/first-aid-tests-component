{
    "name": "pawel-brzezinski/first-aid-tests-component",
    "description": "Provides helpful classes, traits and objects for tests purposes.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Paweł Brzeziński",
            "email": "pawel.brzezinski@smartint.pl"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "adbario/php-dot-notation": "^2.2",
        "beberlei/assert": "^3.3",
        "fakerphp/faker": "^1.16",
        "pawel-brzezinski/first-aid-component": "dev-main"
    },
    "require-dev": {
        "keyvanakbary/mimic": "^1.0",
        "phpmetrics/phpmetrics": "^2.7",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.98",
        "phpunit/phpunit": "^9.5",
        "symfony/framework-bundle": "^5.3",
        "twig/twig": "^3.3"
    },
    "suggest": {
        "phpspec/prophecy-phpunit": "Needs to use component test cases",
        "phpunit/phpunit": "Needs to use component test cases",
        "symfony/framework-bundle": "Needs to use Symfony controller test case",
        "twig/twig": "Needs to use Symfony controller test case"
    },
    "autoload": {
        "psr-4": {
            "PB\\Component\\FirstAidTests\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PB\\Component\\FirstAidTests\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
